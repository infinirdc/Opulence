<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>

<div class="dashboard-container">
    <div class="sidebar">
        <h2 style="color: white; margin-bottom: 30px;"><i class="fas fa-utensils"></i> ADMIN</h2>
        <a href="/" style="color: var(--primary); text-decoration: none; display: block; margin-bottom: 10px;">
            <i class="fas fa-arrow-left"></i> Retour au Site
        </a>
    </div>

    <div class="main-content">
    
        <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 20px; margin-bottom: 30px;">
            <div class="stat-card purple">
                <div><h3><%= commandes ? commandes.length : 0 %></h3><small>Commandes</small></div>
                <i class="fas fa-shopping-bag" style="font-size: 2rem; opacity:0.5;"></i>
            </div>
            <div class="stat-card orange">
                <div><h3><%= ingredients ? ingredients.length : 0 %></h3><small>Ingrédients</small></div>
                <i class="fas fa-carrot" style="font-size: 2rem; opacity:0.5;"></i>
            </div>
            <div class="stat-card">
                <div><h3><%= plats ? plats.length : 0 %></h3><small>Plats au Menu</small></div>
                <i class="fas fa-hamburger" style="font-size: 2rem; opacity:0.5;"></i>
            </div>
        </div>

        <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 30px;">
            <div class="card-dark">
                <h3>Commandes Récentes</h3>
                <table class="table-dark-custom">
                    <thead><tr><th>Client</th><th>Items</th><th>Total</th><th>Statut</th><th>Action</th></tr></thead>
                    <tbody>
                        <% if (commandes && commandes.length > 0) { %>
                            <% commandes.forEach(cmd => { %>
                            <tr>
                                <td><%= cmd.client %></td>
                                <td><small><%= cmd.items.map(i => i.qty + 'x ' + i.platNom).join(', ') %></small></td>
                                <td><%= cmd.total %> $</td>
                                <td><span class="status-badge <%= cmd.statut === 'Terminée' ? 'done' : '' %>"><%= cmd.statut %></span></td>
                                <td>
                                    <form action="/admin/update-status/<%= cmd._id %>" method="POST">
                                        <select name="statut" onchange="this.form.submit()" style="margin:0; padding:5px; width:auto;">
                                            <option disabled selected>Modifier</option>
                                            <option value="En Cuisine">Cuisine</option>
                                            <option value="Terminée">Terminée</option>
                                        </select>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="5" style="text-align:center;">Aucune commande trouvée (ou DB déconnectée)</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <div style="display: flex; flex-direction: column; gap: 20px;">
                <div class="card-dark">
                    <h3>Ajouter Plat</h3>
                    <form action="/admin/add-plat" method="POST">
                        <input type="text" name="nom" placeholder="Nom" required>
                        <input type="text" name="description" placeholder="Description courte">
                        <input type="number" name="prix" placeholder="Prix" required>
                        <input type="text" name="image" placeholder="URL Image">
                        <hr style="border-color:rgba(255,255,255,0.1)">
                        <label style="font-size:0.8rem; color:var(--text-gray);">Ingrédient Principal (pour gestion stock)</label>
                        <input type="text" name="ingredientId" placeholder="ID de l'ingrédient">
                        <input type="number" name="ingredientQte" placeholder="Quantité requise">
                        <button class="btn-primary" style="width:100%">Créer Plat</button>
                    </form>
                </div>

                <div class="card-dark">
                    <h3>Ajouter Stock</h3>
                    <div style="max-height: 100px; overflow-y: auto; margin-bottom: 10px; font-size: 0.8rem; color: var(--text-gray);">
                        <% if (ingredients) { %>
                            <% ingredients.forEach(ing => { %>
                                <div><%= ing.nom %>: <b><%= ing.quantite %> <%= ing.unite %></b> (ID: <%= ing._id %>)</div>
                            <% }) %>
                        <% } %>
                    </div>
                    <form action="/admin/add-stock" method="POST">
                        <input type="text" name="nom" placeholder="Ex: Boeuf" required>
                        <div style="display: flex; gap: 5px;">
                            <input type="number" name="quantite" placeholder="Qte" required>
                            <input type="text" name="unite" placeholder="Kg/Pcs" required>
                        </div>
                        <button class="btn-primary" style="background:var(--accent); width:100%">+ Stock</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

</body>
</html>
