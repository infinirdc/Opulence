<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Opulence Admin</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>

<div class="dashboard-container">
    <div class="sidebar">
        <h2 style="color: var(--primary); margin-bottom: 40px; letter-spacing: 2px;">OPULENCE</h2>
        <a href="/" style="color: white; text-decoration: none; display: block; margin-bottom: 20px; opacity: 0.7;">
            <i class="fas fa-eye"></i> Voir le Site
        </a>
    </div>

    <div class="main-content">
        <h1 style="margin-bottom: 30px;">Tableau de Bord</h1>

        <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 20px; margin-bottom: 40px;">
            <div class="stat-card">
                <div><h3 style="margin:0; font-size:2rem;"><%= commandes ? commandes.length : 0 %></h3><small>Commandes</small></div>
                <i class="fas fa-bell" style="color: var(--primary); font-size: 1.5rem;"></i>
            </div>
            <div class="stat-card">
                <div><h3 style="margin:0; font-size:2rem;"><%= plats ? plats.length : 0 %></h3><small>Plats Carte</small></div>
                <i class="fas fa-utensils" style="color: var(--primary); font-size: 1.5rem;"></i>
            </div>
            <div class="stat-card">
                <div><h3 style="margin:0; font-size:2rem;"><%= ingredients ? ingredients.length : 0 %></h3><small>Stock Ingrédients</small></div>
                <i class="fas fa-boxes" style="color: var(--primary); font-size: 1.5rem;"></i>
            </div>
        </div>

        <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 30px;">
            <div class="card-dark">
                <h3 style="border-bottom: 1px solid #333; padding-bottom: 10px;">Commandes en cours</h3>
                <table class="table-dark-custom">
                    <thead><tr><th>Client</th><th>Détails</th><th>Total</th><th>État</th><th>Action</th></tr></thead>
                    <tbody>
                        <% if (commandes && commandes.length > 0) { %>
                            <% commandes.forEach(cmd => { %>
                            <tr>
                                <td><%= cmd.client %></td>
                                <td><small><%= cmd.items.map(i => i.qty + 'x ' + i.platNom).join(', ') %></small></td>
                                <td><%= cmd.total %> $</td>
                                <td><span style="color:<%= cmd.statut === 'Terminée' ? '#50D1AA' : 'orange' %>"><%= cmd.statut %></span></td>
                                <td>
                                    <form action="/admin/update-status/<%= cmd._id %>" method="POST">
                                        <select name="statut" onchange="this.form.submit()" style="padding: 5px; width: auto; margin:0;">
                                            <option disabled selected>Modifier</option>
                                            <option value="En Cuisine">En Cuisine</option>
                                            <option value="Terminée">Terminée</option>
                                        </select>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="5" style="text-align:center; padding: 20px;">Aucune commande récente</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <div style="display: flex; flex-direction: column; gap: 20px;">
                <div class="card-dark">
                    <h3>Nouveau Plat</h3>
                    <form action="/admin/add-plat" method="POST">
                        <input type="text" name="nom" placeholder="Nom du plat" required>
                        <input type="text" name="description" placeholder="Description Élégante">
                        <input type="number" name="prix" placeholder="Prix ($)" required>
                        <input type="text" name="image" placeholder="URL Image (Optionnel)">
                        <button class="btn-primary" style="width:100%">Ajouter à la Carte</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>
