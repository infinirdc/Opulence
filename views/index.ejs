<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Opulence - Restaurant Gastronomique</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Cinzel:wght@400;700&family=Inter:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <div class="header-content">
                <h1 class="logo">
                    <span class="logo-icon">üëë</span>
                    Opulence
                </h1>
                <nav class="nav">
                    <a href="#menu" class="nav-link">Menu</a>
                    <a href="#about" class="nav-link">√Ä propos</a>
                    <a href="#contact" class="nav-link">Contact</a>
                </nav>
                <div class="cart-icon" id="cartIcon">
                    <i class="fas fa-shopping-cart"></i>
                    <span class="cart-count" id="cartCount">0</span>
                </div>
            </div>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <div class="hero-content">
                <h2 class="hero-title">L'Excellence Gastronomique</h2>
                <p class="hero-subtitle">D√©couvrez une exp√©rience culinaire unique o√π tradition et innovation se rencontrent</p>
                <a href="#menu" class="btn btn-primary">D√©couvrir le Menu</a>
            </div>
        </div>
    </section>

    <!-- Menu Section -->
    <section id="menu" class="menu-section">
        <div class="container">
            <h2 class="section-title">Notre Menu</h2>
            <p class="section-subtitle">S√©lection de plats raffin√©s pr√©par√©s avec des ingr√©dients d'exception</p>
            
            <div class="menu-grid">
                <% if (plats && plats.length > 0) { %>
                    <% plats.forEach(plat => { %>
                        <div class="menu-card" data-id="<%= plat._id %>">
                            <div class="menu-card-header">
                                <h3 class="menu-card-title"><%= plat.nom %></h3>
                                <span class="menu-card-price"><%= plat.prix.toFixed(2) %> ‚Ç¨</span>
                            </div>
                            <p class="menu-card-description"><%= plat.description %></p>
                            
                            <% if (plat.ingredients && plat.ingredients.length > 0) { %>
                                <div class="menu-card-ingredients">
                                    <small>Ingr√©dients :</small>
                                    <div class="ingredients-list">
                                        <% plat.ingredients.forEach((ing, index) => { %>
                                            <% if (index < 3) { %>
                                                <span class="ingredient-tag">
                                                    <%= ing.ingredient.nom %>
                                                </span>
                                            <% } %>
                                        <% }) %>
                                        <% if (plat.ingredients.length > 3) { %>
                                            <span class="ingredient-tag">+<%= plat.ingredients.length - 3 %></span>
                                        <% } %>
                                    </div>
                                </div>
                            <% } %>
                            
                            <div class="menu-card-actions">
                                <div class="quantity-selector">
                                    <button class="qty-btn minus" onclick="updateQuantity('<%= plat._id %>', -1)">-</button>
                                    <input type="number" 
                                           class="qty-input" 
                                           id="qty-<%= plat._id %>" 
                                           value="1" 
                                           min="1" 
                                           max="10">
                                    <button class="qty-btn plus" onclick="updateQuantity('<%= plat._id %>', 1)">+</button>
                                </div>
                                <button class="btn btn-add-to-cart" 
                                        onclick="addToCart('<%= plat._id %>', '<%= plat.nom %>', <%= plat.prix %>)">
                                    <i class="fas fa-plus"></i> Ajouter
                                </button>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="empty-state">
                        <i class="fas fa-utensils"></i>
                        <p>Menu temporairement indisponible</p>
                    </div>
                <% } %>
            </div>
        </div>
    </section>

    <!-- Cart Sidebar -->
    <div class="cart-sidebar" id="cartSidebar">
        <div class="cart-header">
            <h3>Votre Panier</h3>
            <button class="cart-close" onclick="toggleCart()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        
        <div class="cart-items" id="cartItems">
            <!-- Les √©l√©ments du panier seront ins√©r√©s ici par JavaScript -->
        </div>
        
        <div class="cart-footer">
            <div class="cart-total">
                <span>Total :</span>
                <span id="cartTotal">0.00 ‚Ç¨</span>
            </div>
            
            <div class="customer-info" id="customerInfo">
                <input type="text" 
                       id="customerName" 
                       class="form-input" 
                       placeholder="Votre nom" 
                       required>
                <input type="tel" 
                       id="customerPhone" 
                       class="form-input" 
                       placeholder="T√©l√©phone" 
                       required>
            </div>
            
            <button class="btn btn-order" onclick="submitOrder()" id="orderBtn">
                <i class="fas fa-paper-plane"></i> Commander
            </button>
            
            <button class="btn btn-clear" onclick="clearCart()">
                <i class="fas fa-trash"></i> Vider le panier
            </button>
        </div>
    </div>

    <!-- Cart Overlay -->
    <div class="cart-overlay" id="cartOverlay" onclick="toggleCart()"></div>

    <!-- About Section -->
    <section id="about" class="about-section">
        <div class="container">
            <h2 class="section-title">L'Art de la Table</h2>
            <div class="about-content">
                <div class="about-text">
                    <p>Depuis 1995, Opulence incarne l'excellence de la gastronomie fran√ßaise. Notre chef √©toil√©, Jean-Luc Moreau, cr√©e des exp√©riences culinaires uniques en mariant tradition et innovation.</p>
                    <p>Chaque plat est une ≈ìuvre d'art, pr√©par√© avec des ingr√©dients s√©lectionn√©s avec soin aupr√®s des meilleurs producteurs locaux.</p>
                </div>
                <div class="about-features">
                    <div class="feature">
                        <i class="fas fa-leaf"></i>
                        <h4>Ingr√©dients Frais</h4>
                        <p>Produits locaux et de saison</p>
                    </div>
                    <div class="feature">
                        <i class="fas fa-award"></i>
                        <h4>Excellence</h4>
                        <p>2 √©toiles Michelin</p>
                    </div>
                    <div class="feature">
                        <i class="fas fa-wine-glass-alt"></i>
                        <h4>Cave d'Exception</h4>
                        <p>Plus de 500 r√©f√©rences</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="contact-section">
        <div class="container">
            <h2 class="section-title">Contact & R√©servations</h2>
            <div class="contact-grid">
                <div class="contact-info">
                    <h3>Nous trouver</h3>
                    <p><i class="fas fa-map-marker-alt"></i> 23 Avenue George V, 75008 Paris</p>
                    <p><i class="fas fa-phone"></i> +33 1 47 23 54 12</p>
                    <p><i class="fas fa-envelope"></i> contact@opulence-restaurant.com</p>
                    <p><i class="fas fa-clock"></i> Du mardi au samedi, 19h - 23h</p>
                </div>
                <div class="admin-access">
                    <h3>Acc√®s Professionnel</h3>
                    <p>Gestion du restaurant et des stocks</p>
                    <a href="/admin/login" class="btn btn-admin">
                        <i class="fas fa-lock"></i> Espace Admin
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-logo">
                    <h3>Opulence</h3>
                    <p>L'excellence depuis 1995</p>
                </div>
                <div class="footer-links">
                    <a href="#menu">Menu</a>
                    <a href="#about">√Ä propos</a>
                    <a href="#contact">Contact</a>
                    <a href="/admin/login">Admin</a>
                </div>
                <div class="footer-social">
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-facebook"></i></a>
                    <a href="#"><i class="fab fa-tripadvisor"></i></a>
                </div>
            </div>
            <p class="footer-copyright">¬© 2024 Opulence. Tous droits r√©serv√©s.</p>
        </div>
    </footer>

    <!-- Notification Toast -->
    <div class="toast" id="toast"></div>

    <!-- JavaScript -->
    <script src="/js/cart.js"></script>
    <script>
        // Gestion du panier
        let cart = <%= JSON.stringify(cartItems || []) %>;
        
        function updateCartDisplay() {
            document.getElementById('cartCount').textContent = cart.reduce((sum, item) => sum + item.quantite, 0);
            updateCartSidebar();
        }
        
        function updateQuantity(platId, change) {
            const input = document.getElementById(`qty-${platId}`);
            let value = parseInt(input.value) + change;
            if (value < 1) value = 1;
            if (value > 10) value = 10;
            input.value = value;
        }
        
        function toggleCart() {
            const sidebar = document.getElementById('cartSidebar');
            const overlay = document.getElementById('cartOverlay');
            sidebar.classList.toggle('active');
            overlay.classList.toggle('active');
        }
        
        // Initialisation
        document.addEventListener('DOMContentLoaded', updateCartDisplay);
    </script>
</body>
</html>